<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">student</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Imaginarium</property>
        <property name="hibernate.connection.username">root</property>
        <mapping resource="org/gradle/Follower.hbm.xml"/>
        <mapping resource="org/gradle/Fragment.hbm.xml"/>
        <mapping resource="org/gradle/Participant.hbm.xml"/>
        <mapping resource="org/gradle/User.hbm.xml"/>
        <mapping resource="org/gradle/Story.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
